{
  "name": "off-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Marília Marques",
  "license": "MIT",
  "private": false,
  "description": "Off - Rede Social Antidependência - Backend API",
  "scripts": {
    "start:dev": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node ./dist/index.js",
    "start:production": "node ./dist/index.js",
    "vercel-build": "npm run build",
    "test": "jest",
    "knex:rollback-all": "knex --knexfile ./src/server/database/knex/Environment.ts migrate:rollback --all",
    "knex:rollback": "knex --knexfile ./src/server/database/knex/Environment.ts migrate:rollback",
    "knex:migrate": "knex --knexfile ./src/server/database/knex/Environment.ts migrate:latest",
    "knex:seed": "knex --knexfile ./src/server/database/knex/Environment.ts seed:run",
    "typeorm": "ts-node --esm ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "babel": "^5.8.38",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "engines": {
    "node": ">=18.x"
  }
}
