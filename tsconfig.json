{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node10",
		"baseUrl": ".",
		"paths": {
			"Src/*": [
				"./src/*"
			],
			"App/*": [
				"./*"
			]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": [
			"@types",
			"./node_modules/@types"
		],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
	},
  "exclude": [
    "./tests",
    "jest.config.ts"
  ]
}